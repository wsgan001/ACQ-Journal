package prep.Facebook;

import java.io.*;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.Iterator;
import java.util.List;
import java.util.Map;

import org.apache.http.impl.conn.Wire;


public class createPtrees {
	
	public void createNodes(String nodeFile, String outFile){
		try {
			BufferedReader reader = new BufferedReader(new FileReader(nodeFile));
			String line = new String();
			Map<Integer, List<Integer>> map = new HashMap<Integer,List<Integer>>();
			while((line=reader.readLine())!=null){
				String[] str = line.split(" ");
				List<Integer> list = new ArrayList<Integer>();
				for(int i=1;i<str.length;i++){
					if(Integer.parseInt(str[i])==1) list.add(i);
				}
				map.put(Integer.parseInt(str[0]), list);
			}
			BufferedWriter writer = new BufferedWriter(new FileWriter(outFile));
			Iterator<Integer> key = map.keySet().iterator();
			while(key.hasNext()){
				int vertex = key.next();
				List<Integer> list = new ArrayList<Integer>();
				String std = new String();
				std += vertex+"	";
				for(int x:list) std += x+" ";
				std = std.substring(0, std.length()-1);
				writer.write(line);
				writer.newLine();
			}
			writer.flush();
			writer.close();
			
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
		
		
	}
}
