package prep;

import java.io.File;
import java.io.FileInputStream;
import java.io.InputStream;

import javax.xml.parsers.DocumentBuilder;
import javax.xml.parsers.DocumentBuilderFactory;
import org.w3c.dom.*;

import config.Config;

/**
 * 
 * @author chenyankai
 * @date Mar 28, 2017
 */

public class MeSHPrep {
	String xmlFile=null;
	
	public MeSHPrep(String xmlfile){
		this.xmlFile=xmlfile;
	}
	
	//extract one tag
	public void domMeSh(){
		try {
			DocumentBuilderFactory factory=DocumentBuilderFactory.newInstance();
			DocumentBuilder builder=factory.newDocumentBuilder();
			Document doc=builder.parse(new File(xmlFile));
			Element element=doc.getDocumentElement();
	
			NodeList nodes=element.getElementsByTagName("PubmedArticle");
			System.out.println("nodes size: "+nodes.getLength());
			
		} catch (Exception e) {
			// TODO: handle exception
		}
		
	}
	
	
	public static void main(String[] a){
		String file=Config.home+"medsample1.xml";
		MeSHPrep meSHPrep=new MeSHPrep(file);
		
		meSHPrep.domMeSh();
	}
}
